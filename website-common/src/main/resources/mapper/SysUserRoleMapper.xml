<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.highershine.portal.common.mapper.SysUserRoleMapper">
    <!--根据用户id查询-->
    <select id="selectSysUserRoleListByUserId" parameterType="long"
        resultType="com.highershine.portal.common.entity.po.SysUserRole">
        select
          sur.id         as id,
          sur.user_id    as userId,
          sur.role_id    as roleId
        from sys_user_role sur
        where sur.user_id = #{userId}
    </select>
</mapper>